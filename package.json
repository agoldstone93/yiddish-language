{
  "name": "yiddish-language",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:grammar && node scripts/switch-decap-config.mjs local && next dev",
    "dev:prod": "npm run build:grammar && node scripts/switch-decap-config.mjs prod && next dev",
    "build": "npm run build:grammar && node scripts/switch-decap-config.mjs prod && next build",
    "build:grammar": "node scripts/build-grammar.mjs",
    "start": "node scripts/switch-decap-config.mjs prod && next start",
    "lint": "eslint",
    "cms:config:local": "node scripts/switch-decap-config.mjs local",
    "cms:config:prod": "node scripts/switch-decap-config.mjs prod",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "fetch:verb": "node scripts/fetch-verb-from-wiktionary.js"
  },
  "dependencies": {
    "downshift": "^9.0.13",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.1.1",
    "next": "16.1.5",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "esbuild": "^0.27.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "jsdom": "^27.3.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
